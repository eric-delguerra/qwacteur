{% extends 'base.html.twig' %}

{% block body %}
    <div style="margin-top: 5rem" class="container">
        <div class="columns">
            <table class="table is-striped column is-10 is-center">
                <thead>
                <tr>
                    <th><p class="is-orange">Id</p></th>
                    <th><p class="is-orange">Name</p></th>
                    <th><p class="is-orange">LastName</p></th>
                    <th><p class="is-orange">Picture</p></th>
                    <th><p class="is-orange">Duckname</p></th>
                    <th><p class="is-orange">Mail</p></th>
                    <th><p class="is-orange">Password</p></th>
                    <th><p class="is-orange">actions</p></th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td>{{ user.name }}</td>
                        <td>{{ user.lastName }}</td>
                        <td>{{ user.picture }}</td>
                        <td>{{ user.duckname }}</td>
                        <td>{{ user.mail }}</td>
                        <td>{{ user.password }}</td>
                        <td>
                            <a href="{{ path('users_show', {'id': user.id}) }}"><input type="submit"
                                                                                       class="show button is-rounded"
                                                                                       value="voir le profil"></a>
                            <a href="{{ path('users_edit', {'id': user.id}) }}"><input type="submit"
                                                                                       class="edit button is-rounded"
                                                                                       value="Editer"></a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

        </div>
        {#        <h1 class="title">Users index</h1>#}
        <a href="{{ path('users_new') }}">Create new</a>
    </div>


{% endblock %}
