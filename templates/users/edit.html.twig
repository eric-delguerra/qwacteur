{% extends 'base.html.twig' %}

{% block title %}Edit Users{% endblock %}

{% block body %}
    <div class="container" style="text-align: left">
        <div class="columns" style="margin-top: 5rem;">
            <div class="column is-offset-one-quarter ">
                <h1 class="title is-1"> {{ user.name|upper }}</h1>
                <div class="column">
                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    <button class="button is-success is-rounded" style="margin-top: 1rem; display: inline">{{ button_label|default('Enregistrer') }}</button>
                    {{ form_end(form) }}
                </div>
                <div class="column" style="margin-bottom: 1rem">
                    {{ include('users/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>


{% endblock %}
