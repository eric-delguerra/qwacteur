{% extends 'base.html.twig' %}

{% block title %}Users{% endblock %}

{% block body %}
    <div style="margin-top: 5rem" class="columns">
        <h1 class="title is-1">Users</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ user.name }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ user.lastName }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ user.picture }}</td>
            </tr>
            <tr>
                <th>Duckname</th>
                <td>{{ user.duckname }}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ user.mail }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            </tbody>
        </table>

        <a href="{{ path('users_index') }}">back to list</a>

        <a href="{{ path('users_edit', {'id': user.id}) }}">edit</a>

        {{ include('users/_delete_form.html.twig') }}
    </div>

{% endblock %}
