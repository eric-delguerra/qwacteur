{% extends 'base.html.twig' %}

{% block title %}Tags index{% endblock %}

{% block body %}
    <h1>Tags index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Name2</th>
                <th>Count</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tag in tags %}
            <tr>
                <td>{{ tag.id }}</td>
                <td>{{ tag.Name }}</td>
                <td>{{ tag.Name2 }}</td>
                <td>{{ tag.Count }}</td>
                <td>
                    <a href="{{ path('tags_show', {'id': tag.id}) }}">show</a>
                    <a href="{{ path('tags_edit', {'id': tag.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('tags_new') }}">Create new</a>
{% endblock %}
